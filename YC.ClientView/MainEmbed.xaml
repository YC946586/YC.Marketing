<UserControl x:Class="YC.ClientView.MainEmbed"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YC.ClientView"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#E8E8E8">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid  Background="White" >
            <TextBlock Text="控制台" FontSize="16" FontFamily="新宋体"  FontWeight="DemiBold"  VerticalAlignment="Center" HorizontalAlignment="Left" Margin="15 0"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                <Border  Background="{DynamicResource HaderIcon}"/>
                <TextBlock Text="心里的花 我想要带你回家" Margin="30 0" VerticalAlignment="Center"></TextBlock>
            </StackPanel>
        </Grid>
        <ContentControl Background="Red" Grid.Row="1" FocusVisualStyle="{x:Null}" Margin="20" Content="{Binding Body}" />
    </Grid>
</UserControl>
