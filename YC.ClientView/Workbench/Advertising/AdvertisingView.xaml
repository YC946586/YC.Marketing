             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YC.ClientView.Workbench.Advertising"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid   Margin="20 0 0 0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="170"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="70"/>
            </Grid.RowDefinitions>
            <Border Grid.Row="0"   CornerRadius="5" Background="White" >
                <Image Source="{DynamicResource HeaderMsgImg}" Stretch="Uniform"></Image>
            </Border>

            <local:Funtions Grid.Row="1"/>
            <!--<Border Grid.Row="1" Margin="0 20 0 0"  CornerRadius="5" Background="White">

            </Border>-->
            <Border Grid.Row="2" Margin="0 20 0 0"  CornerRadius="5" Background="White">

            </Border>
            <!--<Border Grid.Row="3" Margin="0 20 0 0"  CornerRadius="5" Background="White">

            </Border>-->
        </Grid>
    </Grid>
</UserControl>
